---
# webservers Variables

httpd_2_4:
  # 起動ユーザ
  user_name: apache
  # 起動グループ
  group_name: apache
  # インストールリポジトリ
  repo_url: https://repo.ius.io/ius-release-el7.rpm 
  # ソースファイル作業ディレクトリ
  work_dir: /usr/local/src
  # RPMファイルビルド先ディレクトリ
  rpmbuild_dir: /root/rpmbuild
  # ソースファイルダウンロードURL
#  url: http://ftp.tsukuba.wide.ad.jp/software/apache//httpd/httpd-2.4.18.tar.bz2
  url: http://archive.apache.org/dist/httpd/httpd-2.4.18.tar.bz2
  # ソースファイル名
  src_filename: httpd-2.4.18.tar.bz2
  # RPMファイル名
  rpm_filenames:
    - httpd-2.4.18-1.x86_64.rpm
    - httpd-tools-2.4.18-1.x86_64.rpm
    - mod_ssl-2.4.18-1.x86_64.rpm
  # RPMファイル配置ディレクトリ
  rpm_directory: /usr/local/src/httpd
  # 設定ファイルパス
  conf_file: /etc/httpd/conf/httpd.conf
  # confの追加インクルードパス
  extra_conf_path: /etc/httpd/conf/extra
  # バーチャルホストconfの追加インクルードパス
  vhosts_conf_path: /etc/httpd/conf/vhosts.d
